// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  BASIC
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  role     UserRole @default(BASIC)
  email    String   @unique
  password String
  feeds    Feed[]   @relation("UserFeed")
}


model Feed {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  description String
  users   User[]  @relation("UserFeed")

}